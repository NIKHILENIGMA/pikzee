{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "test": "",
        "lint:eslint": "eslint .",
        "lint:fix": "eslint . --fix",
        "start": "node dist/server.js",
        "dev": "nodemon src/server.ts",
        "build": "tsc -p . && tsc-alias",
        "build:prod": "tsc -p . --sourceMap false && tsc-alias",
        "clean:dist": "rm -rf dist",
        "docker:build": "docker compose up --build",
        "docker:dev": "docker compose up -d --build",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f",
        "format:check": "prettier --check .",
        "format:fix": "prettier --write .",
        "format": "pnpm run format:fix",
        "clean": "rm -rf node_modules",
        "prepare": "husky",
        "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
        "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
        "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
        "db:push": "drizzle-kit push --config=drizzle.config.ts",
        "db:gen:migrate": "pnpm db:generate && pnpm db:migrate",
        "db:dev": "pnpm db:push && pnpm db:studio",
        "db:clean": "rm -rf ./src/core/db/migrations/*",
        "db:seed": "ts-node ./scripts/seed.ts",
        "db:seed:tiers": "ts-node -e \"require('dotenv/config'); require('./src/core/db/seeds/tiers.seed').seedTiers().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); })\"",
        "db:fresh": "pnpm db:migrate && pnpm db:seed"
    },
    "lint-staged": {
        "*.ts": [
            "pnpm run lint:fix",
            "pnpm run format:fix"
        ]
    },
    "keywords": [
        "node",
        "server",
        "typescript"
    ],
    "author": "Nikhil Harmalkar",
    "license": "MIT",
    "packageManager": "pnpm@10.13.1",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.917.0",
        "@aws-sdk/s3-request-presigner": "^3.917.0",
        "@clerk/express": "^1.7.33",
        "@novu/api": "^3.11.0",
        "@novu/framework": "^2.8.0",
        "@sendgrid/mail": "^8.1.6",
        "axios": "^1.12.2",
        "body-parser": "^2.2.0",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.0",
        "drizzle-orm": "^0.44.5",
        "express": "^5.1.0",
        "googleapis": "^164.1.0",
        "helmet": "^8.1.0",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "pg": "^8.16.3",
        "pino": "^9.11.0",
        "pino-pretty": "^13.1.1",
        "source-map-support": "0.5.16",
        "svix": "^1.76.1",
        "zod": "^4.0.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.36.0",
        "@types/body-parser": "^1.19.6",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/module-alias": "^2.0.4",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.1.0",
        "@types/pg": "^8.15.5",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "lint-staged": "12.3.2",
        "nodemon": "^3.1.10",
        "prettier": "3.6.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.44.1"
    }
}
